{
  "name": "logger",
  "version": "1.1.5",
  "description": "This app basically logs the activity of logged in user and also display its idle times. Moreover it also takes entire desktop screenshot after every n interval of time which would be decided by the admin.",
  "main": "main/main.js",
  "scripts": {
    "dev": "next dev",
    "start": "next start && electron .",
    "electron-dev": "electron .",
    "format": "prettier --write .",
    "build": "npm run rebuild && pyinstaller --onefile --name scroll_tracker main/scroll_tracker.py && next build && electron-builder",
    "rebuild": "electron-rebuild -f -w better-sqlite3"
  },
  "build": {
    "appId": "com.infoware-logger.123",
    "asarUnpack": [
      "**/better-sqlite3/**"
    ],
    "productName": "Activity Tracker - Digital Links",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico",
      "signAndEditExecutable": false,
      "sign": false,
      "compression": "maximum"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Activity Tracker - Digital Links",
      "include": "installer.nsh"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    },
    "files": [
      "main/**/*",
      "pages/**/*",
      "components/**/*",
      "out/**/*",
      "build/**/*",
      "next.config.js",
      "package.json",
      "!**/*.md",
      "!**/test{,s}/**",
      "!**/*.test.*",
      "!**/__mocks__/**",
      "!**/.env*",
      "!**/node_modules/*/{test,__tests__,tests}/**"
    ],
    "extraResources": [
      {
        "from": "dist",
        "to": "resources/dist",
        "filter": [
          "scroll_tracker*"
        ]
      }
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^10.4.20",
    "cross-env": "^7.0.3",
    "electron": "^33.0.2",
    "electron-builder": "^25.1.8",
    "electron-rebuild": "^3.2.9",
    "next": "^15.3.3",
    "postcss": "^8.4.47",
    "prettier": "^3.4.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwindcss": "^3.4.14"
  },
  "dependencies": {
    "apexcharts": "^3.54.1",
    "axios": "^1.7.7",
    "better-sqlite3": "^11.10.0",
    "electron-is-dev": "^3.0.1",
    "electron-settings": "^4.0.4",
    "get-windows": "^9.2.0",
    "lucide-react": "^0.454.0",
    "moment": "^2.30.1",
    "node-global-key-listener": "^0.3.0",
    "react-apexcharts": "^1.5.0",
    "react-redux": "^9.1.2",
    "redux": "^5.0.1",
    "redux-thunk": "^3.1.0",
    "sharp": "^0.34.2",
    "socket.io-client": "^4.8.1"
  }
}
